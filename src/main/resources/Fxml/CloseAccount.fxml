<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" styleClass="primary_container" stylesheets="@../Stylesheets/DeleteAccount.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CloseAccountController">
    <HBox>
        <VBox.margin>
            <Insets top="46.0" />
        </VBox.margin>
        <TextField fx:id="account_number" onMouseEntered="#onInputStart" prefHeight="30.0" prefWidth="264.0" promptText="Type Your Account Number.." styleClass="Text_box">
            <HBox.margin>
                <Insets left="25.0" top="23.0" />
            </HBox.margin>
        </TextField>
        <Button fx:id="search_button" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="125.0" styleClass="Search_Button" text="Search">
            <HBox.margin>
                <Insets top="23.0" />
            </HBox.margin>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <padding>
            <Insets bottom="30.0" right="30.0" />
        </padding>
    </HBox>
    <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <Label fx:id="acc_holderLabel" layoutX="30.0" layoutY="160.0" text="Account Holder Name :-" textFill="#0009ff" wrapText="true" AnchorPane.bottomAnchor="160.0" AnchorPane.leftAnchor="30.0">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextArea fx:id="show_name" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="20.0" prefWidth="200.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="10.0" />
        <Label fx:id="reg_noLabel" layoutX="30.0" layoutY="160.0" text="Registration Number :-" textFill="#04ff00" wrapText="true" AnchorPane.bottomAnchor="120.0" AnchorPane.leftAnchor="30.0">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label fx:id="acc_noLabel" layoutX="30.0" layoutY="160.0" text="Account Number :-" textFill="#d900ff" wrapText="true" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="30.0">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label fx:id="err_label" textFill="#e10909" wrapText="true" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="20.0">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <TextArea fx:id="show_regNo" layoutX="194.0" layoutY="50.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="10.0" prefWidth="200.0" />
        <TextArea fx:id="show_accNo" layoutX="194.0" layoutY="100.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="10.0" prefWidth="200.0" AnchorPane.topAnchor="93.0" />
    </AnchorPane>
    <HBox>
        <Button fx:id="closeaccount_button" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0" styleClass="Close_Account_Button" text="Close Account">
            <HBox.margin>
                <Insets left="45.0" top="30.0" />
            </HBox.margin>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="cancel_button" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="140.0" styleClass="Cancel_Button" text="Cancel">
            <HBox.margin>
                <Insets left="65.0" top="30.0" />
            </HBox.margin>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <padding>
            <Insets bottom="30.0" />
        </padding>
    </HBox>
</VBox>
